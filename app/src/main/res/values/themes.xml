<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NetzmeOdenktools" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_alert_dialog</item>
    </style>

    <!-- STROKE EDITTEXT STYLE -->
    <style name="strokedTextInputLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#2d2d2d</item>
        <item name="android:textColorHint">#2d2d2d</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">6dp</item>
        <!--        <item name="android:fontFamily">@font/quicksand_regular</item>-->
        <item name="android:background">@drawable/bg_til_default_stroke_state</item>
        <item name="android:colorControlActivated">#f01f0e</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- #.START OVERRRIDE ICON TOOLBAR -->
    <style name="Toolbar" parent="Theme.MaterialComponents">
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="elevation">2dp</item>
        <item name="actionOverflowButtonStyle">@drawable/ic_more</item>
        <item name="android:actionOverflowButtonStyle">@drawable/ic_more</item>
    </style>
    <!-- #.END OVERRRIDE ICON TOOLBAR -->

    <!-- #.START OVERRRIDE WARNA TITLE TOOLBAR -->
    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#CC030303</item>
        <!--        <item name="android:fontFamily">@font/quicksand_bold</item>-->
    </style>

</resources>